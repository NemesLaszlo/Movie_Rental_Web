@page
@model MovieRentalRazor.Pages.FilmList.CreateModel

<br />
<h2 class="text-info">Create New Film</h2><br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Film.Title"></label>
            </div>
            <div class="col-6">
                <input asp-for="Film.Title" class="form-control" />
            </div>
            <span asp-validation-for="Film.Title" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Film.Director"></label>
            </div>
            <div class="col-6">
                <input asp-for="Film.Director" class="form-control" />
            </div>
            <span asp-validation-for="Film.Director" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Film.Year"></label>
            </div>
            <div class="col-6">
                <input asp-for="Film.Year" class="form-control" />
            </div>
            <span asp-validation-for="Film.Year" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Create" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Back to Films</a>
            </div>
        </div>
    </form>
</div>



